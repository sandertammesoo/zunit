# Helper function: Perform in-place sed replacement
define ised
	sed $(1) $(2) > "$(2).1"
	mv "$(2).1" "$(2)"
endef

# Helper function: Perform in-place sed replacement with extended regex
define isede
	sed -E $(1) $(2) > "$(2).1"
	mv "$(2).1" "$(2)"
endef

